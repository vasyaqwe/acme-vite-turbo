{
   "extends": "@acme/tsconfig/base.json",
   "compilerOptions": {
      "useDefineForClassFields": true,
      "lib": ["ES2022", "DOM", "DOM.Iterable"],
      "module": "esnext",
      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "jsx": "react-jsx",
      "baseUrl": ".",
      "paths": {
         "@/*": ["./src/*"]
      },
      "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
   },
   "include": ["src"]
}
