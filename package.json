{
  "name": "acme-turbo",
  "private": true,
  "engines": {
    "node": ">=20.13.1"
  },
  "packageManager": "pnpm@9.1.0",
  "scripts": {
    "build": "turbo build && pnpm db:push",
    "build:web": "turbo build --filter=@acme/web && pnpm db:push",
    "start:server": "turbo start --filter=@acme/server",
    "start": "turbo start",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:push": "pnpm -F db push",
    "db:studio": "pnpm -F db studio",
    "dev": "turbo dev --parallel",
    "dev:web": "turbo dev --filter=@acme/web --filter=@acme/ui --filter=@acme/server",
    "dev:mobile": "turbo dev --filter=@acme/mobile --filter=@acme/server",
    "format": "turbo format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo typecheck",
    "ui-add": "pnpm -F ui ui-add"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "devDependencies": {
    "@acme/prettier-config": "workspace:*",
    "@turbo/gen": "^2.0.3",
    "prettier": "^3.2.5",
    "turbo": "^2.0.3",
    "typescript": "^5.4.5"
  },
  "prettier": "@acme/prettier-config"
}